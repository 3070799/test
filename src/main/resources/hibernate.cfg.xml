<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/test_db</property><!--jdbc:postgresql://localhost:5432/config_lesson-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver </property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>

        <mapping resource="entities/User.hbm.xml"/>
        <mapping resource="entities/Name.hbm.xml"/>
        <mapping resource="entities/Timezone.hbm.xml"/>
        <mapping resource="entities/Street.hbm.xml"/>
        <mapping resource="entities/Location.hbm.xml"/>
        <mapping resource="entities/Registered.hbm.xml"/>
        <mapping resource="entities/Picture.hbm.xml"/>
        <mapping resource="entities/Login.hbm.xml"/>
        <mapping resource="entities/ID.hbm.xml"/>
        <mapping resource="entities/Dob.hbm.xml"/>
        <mapping resource="entities/Coordinates.hbm.xml"/>
    </session-factory>
</hibernate-configuration>